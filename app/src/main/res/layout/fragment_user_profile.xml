<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment">

    <!-- 해당 ScrollView의 위 아래 길이를 코드로 구현! -->

    <ScrollView
        android:id="@+id/scrollViewInUserProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/app_background_color">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_first_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0704225" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_second_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0985915" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_third_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1550704" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_fourth_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3154929"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_fifth_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3549295"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_first_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0833333" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_second_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1555555"/>

            <!--app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile"와 app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"는 차이가 없는 것처럼 보임(아마도 비율을 직접 계산해서 그럴수도)
              -->

            <ImageView
                android:id="@+id/linearLayout_first_UserProfile"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_cover"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_first_UserProfile"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_event"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second_UserProfile"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_UserProfile"/>

            <TextView
                android:id="@+id/tv_userProfile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[이름]님의 프로필이에요"
                android:fontFamily="@font/nanum_square_neo_bold"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third_UserProfile"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_UserProfile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보를 입력해주세요!"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_userProfile1"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_UserProfile"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/events_tap"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fourth_UserProfile" />


            <LinearLayout
                android:id="@+id/linearLayout_name"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fifth_UserProfile"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_email"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_name"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_nickname"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_email"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_student_number"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_nickname"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_github_address"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_student_number"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_checkCRA"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_github_address"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_UserProfile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>