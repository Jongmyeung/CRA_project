<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/app_background_color">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_first_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.103186645" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_second_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.14201821" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_third_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18084976" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_fourth_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2169014"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_fifth_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3633802"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_sixth_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.597183"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_seventh_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4605633"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_first_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.085158154" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_second_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1222222"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_third_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3583333"/>

            <ImageView
                android:id="@+id/linearLayout_first_Profile"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_cover"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_Profile"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_first_Profile"/>

            <TextView
                android:id="@+id/tv1_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_neo_bold"
                android:padding="0dp"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_Profile"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second_Profile"/>

            <TextView
                android:id="@+id/tv2_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필을 확인해보세요"
                android:fontFamily="@font/nanum_square_neo_bold"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_Profile"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third_Profile"/>

            <Button
                android:id="@+id/btn_forProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BF8D94C7"
                android:text="프로필"
                android:fontFamily="@font/nanum_square_neo_bold"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_Profile"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fourth_Profile"/>

            <Button
                android:id="@+id/btn_forEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BF8D94C7"
                android:text="편집하기"
                android:fontFamily="@font/nanum_square_neo_bold"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_third_Profile"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fourth_Profile"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/events_tap"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fifth_Profile"/>
            
            <ImageView
                android:id="@+id/iv_qrCode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_seventh_Profile"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
