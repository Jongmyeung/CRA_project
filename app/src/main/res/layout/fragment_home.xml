<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_color"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/app_topbar"/>

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:background="@drawable/profile_cover"
        android:layout_marginTop="45dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="\n곧 진행돼요!\n[이벤트 이름]\n"/>

        <Button
            android:id="@+id/btn_toApply"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:text="신청하기"/>

    </FrameLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_scroll_cover"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">
            
            <FrameLayout
                android:id="@+id/frame_event1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/event_image">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="270dp"
                    android:text="신청1"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_event2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_image" />

            <FrameLayout
                android:id="@+id/frame_event3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_image"/>

            <FrameLayout
                android:id="@+id/frame_event4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_image"/>

            <FrameLayout
                android:id="@+id/frame_event5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_image"/>

            <FrameLayout
                android:id="@+id/frame_event6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_image">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="270dp"
                    android:text="신청6"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_event7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_image"/>
            
            
        </LinearLayout>
        


    </ScrollView>

</LinearLayout>