<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_in_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/app_background_color">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_first_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.103186645" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_second_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.13201821" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_third_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.16084976" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_fourth_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2169014"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_fifth_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3633802"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_sixth_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4133802"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_first_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.085158154" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_second_SignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15"/>

            <ImageView
                android:id="@+id/linearLayout_first_notSignHome"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_cover"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_SignHome"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_first_SignHome"/>

            <TextView
                android:id="@+id/tv1_notSignHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="곧 진행돼요!"
                android:fontFamily="@font/nanum_square_neo_regular"
                android:padding="0dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_SignHome"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second_SignHome"/>

            <TextView
                android:id="@+id/event_for_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_neo_bold"
                android:padding="0dp"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_SignHome"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third_SignHome"/>

            <Button
                android:id="@+id/btn_ToApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BF8D94C7"
                android:text="신청하기"
                android:fontFamily="@font/nanum_square_neo_bold"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_SignHome"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fourth_SignHome"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/events_tap"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fifth_SignHome"/>

            <LinearLayout
                android:id="@+id/linearLayout_name"
                android:layout_width="340dp"
                android:layout_height="80dp"
                android:background="@drawable/profile_bar_in_scrollview"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_sixth_SignHome"
                app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_SignHome">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="25dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>