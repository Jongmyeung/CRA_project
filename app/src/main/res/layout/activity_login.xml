<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_image_using"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11229135"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4295774"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5207633"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62670714"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_fifth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8816901"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10218978"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1522222"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:fontFamily="@font/nanum_square_neo_heavy"
        android:text="반가워요!"
        android:textColor="#BF2D334F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_first"/>


    <ImageView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_text_field_image"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second"/>

    <ImageView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_text_field_image"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third"/>

    <LinearLayout
        android:id="@+id/linearLayout_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second">

        <EditText
            android:id="@+id/et_email_login"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:hint="이메일"
            android:background="@null"
            android:minWidth="48dp"
            android:minHeight="48dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second">


        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_square_neo_regular"
            android:hint="비밀번호"
            android:background="@null"
            android:inputType="textPassword"
            android:minWidth="48dp"
            android:minHeight="48dp"/>

        <ImageButton
            android:id="@+id/btn_eye_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/icon_eye_alt_"
            app:layout_constraintBottom_toBottomOf="@+id/et_password_login"
            app:layout_constraintStart_toEndOf="@+id/et_password_login"
            app:layout_constraintTop_toTopOf="@+id/et_password_login"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2D334F"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:textSize="16dp"
        android:text="로그인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_fourth" />

    <Button
        android:id="@+id/btn_toPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="비밀번호를 잊으셨나요?"
        android:textColor="#5974BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_fifth"/>

    <LinearLayout
        android:id="@+id/linearLayout_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_toPassword">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center"
            android:padding="0dp"
            android:text="처음이신가요?"/>

        <Button
            android:id="@+id/btn_toSignUpFromLogin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#00000000"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#5974BD"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>
        
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>