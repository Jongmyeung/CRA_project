<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resetpassword_background_image"
    android:orientation="vertical"
    tools:context=".ResetAndCheckPasswordActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_first_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11229135"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_second_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4295774"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_third_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5207633"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_fourth_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62670714"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_first_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10218978"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_second_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1522222"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_neo_heavy"
        android:text="비밀번호를\n다시 만들어볼까요?"
        android:textColor="#2D334F"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_resetAndCheck"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_first_resetAndCheck"/>

    <ImageView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_text_field_image"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_resetAndCheck"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second_resetAndCheck"/>

    <ImageView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_text_field_image"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_first_resetAndCheck"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third_resetAndCheck"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_resetAndCheck"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_second_resetAndCheck" />

    <EditText
        android:id="@+id/et_password_check"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_second_resetAndCheck"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_third_resetAndCheck"/>

    <Button
        android:id="@+id/btn_to_password_resetAndCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2D334F"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:textSize="16dp"
        android:text="비밀번호 재설정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_fourth_resetAndCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>