<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 클릭되지 않은 상태 -->
    <item android:state_pressed="false">
        <layer-list>
            <!-- 그림자 -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#33000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item
                android:left="1dp"
                android:right="1dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- 배경 -->
            <item
                android:top="3dp"
                android:left="0dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 클릭된 상태 -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- 그림자 -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#66000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item
                android:left="2dp"
                android:right="2dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#66000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- 배경 -->
            <item
                android:top="4dp"
                android:left="0dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#CCCCCC" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
